<style>
#carouselExampleIndicators {
  position: relative;
  padding-left: 4%;
  width: 300px; /* 设置轮播组件的宽度 */
  height: 200px; /* 设置轮播组件的高度 */
}

.carousel-inner img {
  width: 100%; /* 设置每张轮播图片的宽度为100%，以填充整个轮播组件 */
  height: auto; /* 自适应高度，保持原始宽高比 */
  /* border: 2px dashed rgb(186, 131, 220); */
}
.carousel-control-prev,
.carousel-control-next {
  background-color: rgb(186, 131, 220);
  top: 80%; /* 将控制器按钮上下居中 */
  /* transform: translateY(10%); */
   /* 通过负的自身高度的一半来实现垂直居中 */
}

.carousel-control-prev {
  background-color: rgb(186, 131, 220);
  left: 10px; /* 设置控制器按钮的左边距 */
}

.carousel-control-next {
  background-color: rgb(186, 131, 220);
  right: -35px; /* 设置控制器按钮的右边距 */
}
.carousel-indicators {
  position: relative; /* 设置为相对定位 */
  bottom: -210%;
}
#btn_slide{
  background-color: rgb(186, 131, 220);
}
</style>
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <% for (let i = 0; i < Cloth_index; i++) { %>
        <% if(i == 0) { %>
          <button type="button" id="btn_slide" data-bs-target="#carouselExampleIndicators"
          data-bs-slide-to=<%= `${i}` %> class="active" aria-current="true" aria-label=<%= `Slide${i+1}` %> ></button>
        <% } else { %>
          <button type="button" id="btn_slide" data-bs-target="#carouselExampleIndicators"
          data-bs-slide-to=<%= `${i}` %> aria-label=<%= `Slide${i+1}` %> ></button>
        <% } %>
      <% } %>
      <!-- <button type="button" id="btn_slide" data-bs-target="#carouselExampleIndicators"
       data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" id="btn_slide" data-bs-target="#carouselExampleIndicators"
       data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" id="btn_slide" data-bs-target="#carouselExampleIndicators"
       data-bs-slide-to="2" aria-label="Slide 3"></button> -->
    </div>

    <div class="carousel-inner">
    <% for (let i = 0; i < Cloth_index; i++) { %>
      <% if(i == 0) { %>
        <div class="carousel-item active">
          <img src=<%= `/images/cloth/cloth${item}-${i+1}.png` %> alt="...">
        </div>
      <% } else { %>
        <div class="carousel-item">
          <img src=<%= `/images/cloth/cloth${item}-${i+1}.png` %> alt="...">
        </div>
      <% } %>
    <% } %>

